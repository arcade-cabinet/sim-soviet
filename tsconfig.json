{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "es2022",
      "dom"
    ],
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [
      "react/canary"
    ]
  },
  "include": [
    "src/**/*",
    "index.js"
  ],
  "exclude": [
    "archive",
    "node_modules",
    "__tests__"
  ],
  "extends": "expo/tsconfig.base"
}
