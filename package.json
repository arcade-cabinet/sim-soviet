{
  "name": "@arcade-cabinet/sim-soviet",
  "private": true,
  "version": "0.1.0",
  "description": "SimSoviet 2000 - Isometric city builder with Vite + BabylonJS + animejs, targeting Capacitor (PWA + Android/iOS)",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:mobile": "playwright test --project='iPhone SE' --project='Pixel 8a'",
    "clean": "rm -rf node_modules dist android/app/build",
    "cap:sync": "cap sync",
    "cap:android": "cap add android && cap sync android",
    "cap:ios": "cap add ios && cap sync ios",
    "android:build": "cap sync android && cd android && ./gradlew assembleDebug",
    "android:run": "cap run android",
    "download:audio": "./scripts/download-audio.sh",
    "setup": "pnpm install && pnpm download:audio"
  },
  "dependencies": {
    "@babylonjs/core": "^8.50.2",
    "@babylonjs/gui": "^8.50.2",
    "@babylonjs/loaders": "^8.50.2",
    "@capacitor/core": "^8.0.2",
    "animejs": "^4.3.5",
    "miniplex": "^2.0.0",
    "miniplex-react": "^2.0.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-reconciler": "0.31.0",
    "reactylon": "^3.5.2",
    "seedrandom": "^3.0.5",
    "tone": "^15.1.22",
    "yuka": "^0.7.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@capacitor/android": "^8.0.2",
    "@capacitor/cli": "^8.0.2",
    "@playwright/test": "^1.58.2",
    "@tailwindcss/vite": "^4.1.18",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@types/seedrandom": "^3.0.8",
    "@types/yuka": "^0.7.4",
    "@vitejs/plugin-react": "^5.1.3",
    "@vitest/coverage-v8": "^4.0.18",
    "happy-dom": "^20.5.3",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  }
}
