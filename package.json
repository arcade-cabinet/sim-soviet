{
  "name": "sim-soviet",
  "private": true,
  "version": "0.1.0",
  "description": "Sim Soviet - Isometric city builder with Vite + BabylonJS + animejs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "test": "echo \"No tests yet\" && exit 0",
    "clean": "rm -rf node_modules dist android/app/build"
  },
  "dependencies": {
    "@babylonjs/core": "^7.41.0",
    "@babylonjs/loaders": "^7.41.0",
    "animejs": "^3.2.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@capacitor/android": "^6.2.0",
    "@capacitor/cli": "^6.2.0",
    "@capacitor/core": "^6.2.0",
    "typescript": "^5.9.3",
    "vite": "^6.0.11"
  },
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  }
}
